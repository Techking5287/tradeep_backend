{
    "model": {
        "name": "SAC",
        "parameters": {
            "hidden_layers": [256, 256],
            "learning_rate": 0.0003,
            "tau": 0.005,
            "gamma": 0.99,
            "batch_size": 256,
            "buffer_size": 1000000,
            "alpha": 0.2
        }
    },
    "agent": {
        "type": "continuous",
        "parameters": {
            "action_space": ["buy", "sell", "hold"],
            "default_trade_size": 1000,
            "money_management": "fixed"
        }
    },
    "environment": {
        "type": "stocks",
        "parameters": {
            "lookback_period": 30,
            "transaction_cost": 0.01,
            "volume": 1000,
            "reward_function": "Sharpe Ratio",
            "symbol_list": ["TSLA"],
            "timeframe": "daily",
            "history": "last year",
            "default_trade_size": 1000
        }
    },
    "training": {
        "batch_size": 256,
        "num_epochs": 1000,
        "optimizer": "Adam",
        "learning_rate": 0.0003,
        "early_stopping": false,
        "patience": 5,
        "tolerance": 0.01,
        "max_grad_norm": 0.5,
        "logging_interval": 100,
        "checkpoint_interval": 1000
    }
}
