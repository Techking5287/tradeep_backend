{
    "model": {
        "name": "TD3",
        "parameters": {
            "actor_hidden_layers": [64, 64],
            "critic_hidden_layers": [64, 64],
            "actor_learning_rate": 0.001,
            "critic_learning_rate": 0.001,
            "tau": 0.005,
            "gamma": 0.99,
            "batch_size": 128,
            "buffer_size": 1000000,
            "exploration_noise": 0.1
        }
    },
    "environment": {
        "type": "stocks",
        "parameters": {
            "lookback_period": 30,
            "transaction_cost": 0.01,
            "volume": 1000,
            "reward_function": "Sharpe Ratio",
            "symbol_list": ["TSLA"],
            "timeframe": "daily",
            "history": "last year",
            "default_trade_size": 1000
        }
    },
    "training": {
        "batch_size": 128,
        "num_epochs": 1000,
        "optimizer": "Adam",
        "learning_rate": 0.001,
        "early_stopping": false,
        "patience": 5,
        "tolerance": 0.01,
        "max_grad_norm": 0.5,
        "logging_interval": 100,
        "checkpoint_interval": 1000
    }
}
