{
    "model": {
        "name": "LSTM",
        "parameters": {
            "num_units": 128,
            "num_layers": 2,
            "learning_rate": 0.001,
            "dropout": 0.2,
            "optimizer": "Adam"
        }
    },
    "agent": {
        "type": "discrete",
        "parameters": {
            "action_space": ["buy", "sell", "hold"],
            "default_trade_size": 1000,
            "money_management": "fixed"
        }
    },
    "environment": {
        "type": "stocks",
        "parameters": {
            "lookback_period": 30,
            "transaction_cost": 0.01,
            "volume": 1000,
            "reward_function": "Sharpe Ratio",
            "symbol_list": ["TSLA"],
            "timeframe": "daily",
            "history": "last year",
            "default_trade_size": 1000
        }
    },
    "training": {
        "batch_size": 128,
        "num_epochs": 100,
        "optimizer": "Adam",
        "learning_rate": 0.001,
        "early_stopping": true,
        "patience": 10,
        "tolerance": 0.01,
        "max_grad_norm": 0.5,
        "logging_interval": 100,
        "checkpoint_interval": 1000
    }
}
